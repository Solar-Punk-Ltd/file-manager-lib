{
  "name": "@solarpunkltd/file-manager-lib",
  "version": "1.0.5",
  "description": "A file manager for storing and handling data on Swarm.",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepublishOnly": "cross-env NODE_ENV=production pnpm run build",
    "build": "rimraf dist && pnpm run build:types && pnpm run build:cjs && pnpm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist/types",
    "test": "jest --config=jest.config.ts --runInBand --verbose --silent",
    "test:keep": "cross-env KEEP_BEE_DIRS=true pnpm run test",
    "test:ut": "cross-env KEEP_BEE_DIRS=true pnpm run test -- --selectProjects=unit",
    "test:it": "cross-env KEEP_BEE_DIRS=true pnpm run test -- --selectProjects=integration",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --report-unused-disable-directives --no-cache",
    "lint:fix": "pnpm run lint --fix",
    "prepare": "pnpm run lint"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "swarm",
    "bee",
    "mantaray",
    "file-manager",
    "bee-js",
    "typescript",
    "browser",
    "node"
  ],
  "author": "SolarPunkLtd",
  "homepage": "https://github.com/Solar-Punk-Ltd/file-manager-lib",
  "license": "Apache-2.0",
  "dependencies": {
    "@ethersphere/bee-js": "^10.4.0",
    "cafe-utility": "^33.3.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.6",
    "@babel/core": "^7.28.6",
    "@babel/plugin-transform-class-properties": "^7.28.6",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-typescript": "^7.28.5",
    "@eslint/js": "^9.39.2",
    "@jest/globals": "^30.2.0",
    "@types/event-emitter": "^0.3.5",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.1.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "babel-loader": "^10.0.0",
    "babel-plugin-add-import-extension": "^1.6.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.12.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "jest": "^30.2.0",
    "jest-cli": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "std-env": "^3.10.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=14"
  }
}
