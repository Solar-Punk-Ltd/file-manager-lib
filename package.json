{
  "name": "@solarpunkltd/file-manager-lib",
  "version": "0.0.12",
  "description": "A file manager for storing and handling data on Swarm.",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "types": "./dist/types/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepublishOnly": "cross-env NODE_ENV=production npm run build",
    "build": "rimraf dist && npm run build:node && npm run build:types && npm run build:browser",
    "build:node": "tsc -p tsconfig.json",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist/types",
    "build:browser": "webpack --progress",
    "test": "jest --config=jest.config.ts --runInBand --verbose",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext ts --report-unused-disable-directives",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run lint"
  },
  "files": [
    "dist"
  ],
  "browser": {
    "stream": false,
    "fs": false,
    "crypto": false,
    "./dist/utils/node.js": "./dist/utils/browser.js",
    "./dist/fileManager.node.js": "./dist/fileManager.browser.js"
  },
  "keywords": [
    "swarm",
    "bee",
    "mantaray",
    "file-manager",
    "bee-js",
    "typescript",
    "browser",
    "node"
  ],
  "author": "SolarPunkLtd",
  "license": "Apache-2.0",
  "dependencies": {
    "@upcoming/bee-js": "^0.17.0",
    "cafe-utility": "^27.14.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@eslint/js": "^8.55.0",
    "@jest/globals": "^29.7.0",
    "@types/event-emitter": "^0.3.5",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.7.5",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "babel-loader": "^9.2.1",
    "babel-plugin-add-import-extension": "^1.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.7.0",
    "jest-cli": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^2.8.8",
    "terser-webpack-plugin": "^5.3.12",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1"
  },
  "engines": {
    "node": ">=14"
  }
}
